<%= form_for @comment, :url => disaster_comment_path(@disaster, @comment), :html => { :method => :patch } do |f| %>
    <% if @comment.errors.any? %>
        <ul>
          <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
   <%= f.text_field :description %>
   <%= f.submit %>
<% end %>

<%= link_to "Back to Last Page", disaster_path(@disaster), :class => 'btn btn-info' %>
